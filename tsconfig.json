{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],

    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",    
    "allowJs": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },              
    "esModuleInterop": true,   
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "resolveJsonModule": true,

    "skipLibCheck": true,          
    "forceConsistentCasingInFileNames": true  
  },
  "exclude": [
    "coverage",
    "jest.config.js",
    "prettier.config.js"
  ]
}
